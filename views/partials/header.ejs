<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="main.css" />
  </head>

  <body>
    <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-bg-dark">
      <a
        id="current-page"
        class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
      >
        <svg class="bi pe-none me-2" width="40" height="32">
          <use xlink:href="#bootstrap"></use>
        </svg>
        <span class="fs-4">Current Page</span>
      </a>
      <hr />
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a
            href="/"
            class="nav-link <%= currentPath === '/' ? 'active' : '' %>"
            aria-current="page"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#home"></use>
            </svg>
            Home
          </a>
        </li>
        <li>
          <a
            href="/about"
            class="nav-link <%= currentPath === '/about' ? 'active' : '' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#speedometer2"></use>
            </svg>
            About Me
          </a>
        </li>
        <li>
          <a
            href="/blogs"
            class="nav-link <%= currentPath === '/blogs' ? 'active' : '' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#table"></use>
            </svg>
            Blogs
          </a>
        </li>
      </ul>
      <hr />
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const currentPage = document.getElementById("current-page");
        const currentPath = "<%= currentPath %>";

        let pageName = "Home Page";

        if (currentPath === "/about") {
          pageName = "About Me";
        } else if (currentPath === "/blogs") {
          pageName = "Blogs";
        }

        currentPage.querySelector("span").textContent = pageName;
      });
    </script>
  </body>
</html>
